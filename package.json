{
  "name": "naming-convention",
  "displayName": "Naming Convention",
  "description": "Convert your identifier name by naming convention.",
  "keywords": [
    "camel case",
    "pascal case",
    "constant case",
    "snake case"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zomixi/naming-convention.git"
  },
  "bugs": {
    "url": "https://github.com/zomixi/naming-convention/issues"
  },
  "license": "MIT",
  "icon": "images/logo.png",
  "publisher": "zomixi",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "naming-convention.camel-case",
        "title": "camelCase"
      },
      {
        "command": "naming-convention.pascal-case",
        "title": "PascalCase"
      },
      {
        "command": "naming-convention.constant-case",
        "title": "CONSTANT_CASE"
      },
      {
        "command": "naming-convention.snake-case",
        "title": "snake_case"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "naming-convention.menus",
          "when": "editorHasSelection"
        }
      ],
      "naming-convention.menus": [
        {
          "command": "naming-convention.camel-case",
          "group": "naming-convention.group@01"
        },
        {
          "command": "naming-convention.pascal-case",
          "group": "naming-convention.group@02"
        },
        {
          "command": "naming-convention.constant-case",
          "group": "naming-convention.group@03"
        },
        {
          "command": "naming-convention.snake-case",
          "group": "naming-convention.group@04"
        }
      ]
    },
    "submenus": [
      {
        "id": "naming-convention.menus",
        "label": "Naming Convention"
      }
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts --fix",
    "changelog": "standard-changelog"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "standard-changelog": "^2.0.27",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "camel-case": "^4.1.2",
    "constant-case": "^3.0.4",
    "pascal-case": "^3.1.2",
    "snake-case": "^3.0.4"
  }
}
